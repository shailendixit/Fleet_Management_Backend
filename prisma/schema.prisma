generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task_DB{
  taskId                   Int      @id @default(autoincrement())
  orderCo              Float?
  orTy                 String?
  orderNumber          Float?
  branchPlant          String?
  customerPO           String?
  suburbTown           String?
  name                 String?
  description          String?
  quantityShipped      Float?
  itemNumber           Float?
  postalCode           Float?
  revNbr               Float?
  revisionReason       String?
  routeCode            String?
  schedPick            DateTime?
  truckId              String?
  location             String?
  scheduledPickTime    Float?
  requestDate          DateTime?
  soldTo               Float?
  shipTo               Float?
  deliverTo            Float?
  stateCode            String?
  lnTy                 String?
  descriptionLine2     String?
  zoneNo               String?
  stopCode             String?
  nextStat             Float?
  lastStat             Float?
  priority             Float?
  futureQtyCommitted   Float?
  quantityOrdered      Float?
  reasonCode           String?
  lineNumber           Float?
  isassigned          Boolean  @default(false)
}

enum Status {
  available
  unavailable
}



model Driver_Db {
  driverId          Int      @id @default(autoincrement())
  truckNo     Int?
  cubic       Float?   @map("Cubic (m3)")
  driverName  String?  @map("Drivers Name")
  truckType   String?  @map("Truck")
  status      Status   @default(available)
  username    String?  @unique
  password    String?
}
model User_Db {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  email       String   @unique
  password    String
  role     String     @default("admin")
}


model AssignedTask_DB {
  assignedTaskId    Int      @id @default(autoincrement())
  taskId             Int      @unique
  orderCo              Float?
  orTy                 String?
  orderNumber          Float?
