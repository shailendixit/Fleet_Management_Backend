  customerPO           String?
  suburbTown           String?
  name                 String?
  description          String?
  quantityShipped      Float?
  itemNumber           Float?
  postalCode           Float?
  revNbr               Float?
  revisionReason       String?
  routeCode            String?
  schedPick            DateTime?
  truckId              String?
  location             String?
  scheduledPickTime    Float?
  requestDate          DateTime?
  soldTo               Float?
  shipTo               Float?
  deliverTo            Float?
  stateCode            String?
  lnTy                 String?
  descriptionLine2     String?
  zoneNo               String?
  stopCode             String?
  nextStat             Float?
  lastStat             Float?
  priority             Float?
  futureQtyCommitted   Float?
  quantityOrdered      Float?
  reasonCode           String?
  lineNumber           Float?
  truckNo             Int?
  cubic               Float?   @map("Cubic (m3)")
  driverName          String?  @map("Drivers Name")
  truckType           String?  @map("Truck")
